{
    "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "lib": ["es2020"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*",
      "tokens/**/*.json"
    ],
    "exclude": [
      "node_modules", 
      "**/*.spec.ts"
    ]
  }